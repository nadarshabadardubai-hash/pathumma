<script>
const params = new URLSearchParams(window.location.search);
const toName = params.get("to") || "My Love";
document.getElementById("title").innerText = `My ${toName} ğŸ’–`;

const startBtn = document.getElementById("startBtn");
const questionsContainer = document.getElementById("questionsContainer");
const questions = document.querySelectorAll("#questionsContainer .question");
const answerMsg = document.getElementById("answerMsg");
const finalMsg = document.getElementById("finalMsg");
let stage = 0;

startBtn.addEventListener("click", () => {
  startBtn.classList.add("hidden");      // hide button
  document.getElementById("intro").classList.add("hidden"); // hide intro
  questionsContainer.classList.remove("hidden");
  showQuestion(stage);
});

function showQuestion(index) {
  questions.forEach(q => q.classList.add("hidden"));
  if(index < questions.length) {
    questions[index].classList.remove("hidden");
    answerMsg.innerHTML = `<button onclick="answerYes()">Yes ğŸ’–</button> <button onclick="answerNo()">No ğŸ˜¢</button>`;
    answerMsg.classList.remove("hidden");
  } else {
    questionsContainer.classList.add("hidden");
    answerMsg.classList.add("hidden");
    finalMsg.classList.remove("hidden");
  }
}

function answerYes() {
  answerMsg.innerHTML = `<div>${questions[stage].dataset.msg}</div><button onclick="nextQ()">Next ğŸŒ¹</button>`;
}

function answerNo() {
  answerMsg.innerHTML = `<div>Donâ€™t worryâ€¦ Iâ€™ll wait for you always â¤ï¸</div><button onclick="nextQ()">Next ğŸŒ¹</button>`;
}

function nextQ() {
  stage++;
  showQuestion(stage);
}

// Floating hearts
function createHeart() {
  const heart = document.createElement("div");
  heart.className = "heart";
  heart.innerText = "â¤ï¸";
  heart.style.left = Math.random() * 100 + "vw";
  heart.style.animationDuration = (3 + Math.random() * 2) + "s";
  document.body.appendChild(heart);
  setTimeout(() => heart.remove(), 5000);
}
setInterval(createHeart, 500);
</script>
